# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Jupyter notebook
*.ipynb text

# Documentation
*.md text
*.txt text

# YAML files
*.yml text

# Explicit Windows files
*.bat text eol=crlf

# Explicit Unix files
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.zip binary
*.pdf binary